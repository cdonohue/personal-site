---
import Animated from '../components/Animated'
import Button from '../components/Button.astro'
import Grid from '../components/Grid.astro'
import Icon from '../components/Icon.astro'
import PageHeader from '../components/PageHeader.astro'
import SocialCard from '../components/SocialCard.astro'
import Terminal from '../components/Terminal.astro'
import Layout from '../layouts/Layout.astro'

const socialLinks = [
  {
    label: 'Github',
    icon: 'github-logo',
    url: 'https://www.github.com/cdonohue',
  },
  {
    label: 'Twitter',
    icon: 'twitter-logo',
    url: 'https://www.twitter.com/chaddonohue',
  },
  {
    label: 'LinkedIn',
    icon: 'linkedin-logo',
    url: 'https://www.linkedin.com/in/chaddonohue',
  },
]
---

<Layout title="Home">
  <main class="flow">
    <PageHeader>
      <h1 class="text-center headline hidden">Hi, I'm Chad</h1>
      <h2 class="subtitle text-center hidden">I'm a software engineer</h2>
    </PageHeader>
    <section class="page-content">
      <article class="region">
        <div class="wrapper flow prose">
          <Animated client:load delay={0.2}>
            <h3>
              I build <span class="text-accent">user experiences</span> and lead
              <span class="text-accent">engineering</span> teams
            </h3>
          </Animated>
          <Animated client:load delay={0.3}>
            <p>
              Bringing a unique combination of technical expertise, creative
              problem-solving, and user-centered design principles, my work is
              focused on developing user-friendly and intuitive interfaces that
              not only meet but exceed user needs and expectations.
            </p>
            <p>
              I enjoy solving problems at the intersection of product, design,
              and engineering.
            </p>
          </Animated>
        </div>
      </article>

      <article class="region experience">
        <div class="wrapper flow prose">
          <Animated client:load delay={0.4}>
            <h3>I focus on the <span class="text-accent">user</span></h3>
          </Animated>
          <Animated client:load delay={0.5}>
            <p>
              I'm passionate about creating user experiences that are
              user-friendly, intuitive, and accessible. I believe that
              understanding the user is the key to building great products.
            </p>
            <p>
              I've worked in the software engineering space for over 14 years
              and enjoy being part of a team that solves problems together.
            </p>
            <Terminal />
          </Animated>
        </div>
      </article>
      <article id="contact" class="region contact">
        <div class="wrapper flow prose">
          <h3>Want to work together?</h3>
          <p>
            Send me an email <a href="mailto:chad.donohue+dev@gmail.com">here</a
            >. Or, you can find me at a few other places around the web.
          </p>
          <Grid>
            {socialLinks.map((link) => <SocialCard link={link} />)}
          </Grid>
        </div>
      </article>
    </section>
  </main>
</Layout>

<style>
  h2 {
    font-size: var(--size-step-2);
    text-align: center;
    margin-inline: auto;
    font-weight: 400;
  }
  hr {
    border-top: 1px solid var(--surface-2);
    border-right: none;
    border-bottom: none;
    border-left: none;
  }
  .experience {
    background-color: var(--surface-2);
  }
  .social-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-s);
  }
