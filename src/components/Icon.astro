<style define:vars={{ fill, accent }}>
  .icon {
    width: 0.75em;
    width: 1cap;
    height: 0.75em;
    height: 1cap;
  }

  .with-icon {
    display: inline-flex;
    align-items: baseline;
  }

  .with-icon .icon {
    margin-inline-end: 1rem;
  }

  svg * {
    fill: var(--fill, var(--color-fg));
  }
  .accent {
    fill: var(--accent, var(--color-accent));
  }
</style>
