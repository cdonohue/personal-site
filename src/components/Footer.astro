---
import Icon from './Icon.astro'
import Waves from './Waves.astro'
---

<footer class="region">
  <div class="wrapper prose">
    <ul>
      <li>
        <a href="/"><Icon name="home" label="Home" /></a>
      </li>
    </ul>
    <div>Copyright Â© 2023 Chad Donohue</div>
  </div>
</footer>
<style>
  footer {
    background-color: var(--surface-2);
    font-size: var(--size-step-0);
    color: var(--color-fg);
  }

  footer > div {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: var(--space-s);
    align-items: flex-start;
  }

  ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
    display: flex;
    gap: var(--space-s);
  }

  ul li a[href] {
    text-decoration: none;
    color: var(--color-fg);
    transition: all 0.2s ease-in-out;
  }

  a[href]:hover {
    color: var(--color-fg);
  }

  @media (min-width: 640px) {
    footer > div {
      flex-direction: row;
      align-items: center;
    }
  }
</style>
