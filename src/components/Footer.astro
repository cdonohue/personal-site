<style>
  footer {
    font-size: var(--size-step--1);
    color: var(--color-fg-muted);
  }

  footer > div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
    display: flex;
    gap: var(--space-xs);
  }

  ul li a[href] {
    text-decoration: none;
    color: var(--color-fg-muted);
    transition: all 0.2s ease-in-out;
  }

  a[href]:hover {
    color: var(--color-fg);
  }

  @media (min-width: 640px) {
    footer > div {  
      flex-direction: row;
    }
  }
</style>
